<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/css/error.css" />

    <title>Weatherro - Error</title>
  </head>
  <body>
    <main>
      <header>
        <h1 class="error-header">An error occured!</h1>
        <h3 class="error--paragraph">City not found!</h3>
      </header>
      <div class="app--content">
        <div class="weather--info__container">
          <h2 class="info">
            Check your spelling, (utf-8 chars are not allowed too)
          </h2>
        </div>
      </div>
      <footer>
        <form action="weather" method="post" autocomplete="off">
          <input
            type="text"
            id="search--input"
            name="city"
            placeholder="City "
            required="true"
          />
          <input type="submit" value="go" />
        </form>
      </footer>
    </main>
    <script>
      const date = new Date();
      const hours = date.getHours();
      const year = date.getFullYear();

      const inputField = document.getElementById("search--input");
      const yearSpan = document.getElementById("year");

      window.onload = () => {
        let currentTheme;

        // check time to select day or night theme
        if (hours >= 20 || hours <= 6) {
          currentTheme = "night";
        } else {
          currentTheme = "day";
        }

        const body = document.getElementsByTagName("body")[0];
        body.classList.add(currentTheme);
        yearSpan.textContent = year;
      };
    </script>
  </body>
</html>
